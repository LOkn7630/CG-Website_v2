<!DOCTYPE html>
<html lang="en">

<head>
	<%- include("partials/header") %>
	<link rel="stylesheet" href="/stylesheets/signup.css">

</head>

<body>
	<%- include("partials/navbar") %>
	<section>
		<div class="container-fluid">

			<div class="row">
				<div class="col col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 first">
					<h1 class="section_header">Sign Up Now!</h1>
					<h1 class="section_header">Unlock All Features.</h1>

					<img class="main_image" src="/images/signup.png" />

					<p class="section_info">You will get an unlimited</p>
				</div>
				<div class="col col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 second">

					<div class="signup_form">

						<h1>Sign Up</h1>
						<hr>
						<div style="text-align:center;">



							<a class="btn btn-outline-dark" href="/auth/google/" role="button"
								style="text-transform:none">
								<img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in"
									src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
								Sign Up with Google
							</a>


						</div>
						<hr>

						<%- include("partials/messages") %>

						<form action="/auth/signup/" method="POST">
							<div class="form-group">
								<p>Full Name</p>
								<input class="form-control" type="text" name="username" placeholder="Full Name"
									value="<%= typeof username != 'undefined' ? username : ''  %>">
							</div>
							<div class="form-group">
								<p>Email</p>
								<input class="form-control" type="email" name="email" placeholder="Email"
									value="<%= typeof email != 'undefined' ? email : ''  %>">
							</div>
							<div class="form-group">
								<p>Enter Password</p>
								<input class="form-control" type="password" name="password" placeholder="********"
									value="<%= typeof password != 'undefined' ? password : ''  %>">
							</div>
							<div class="form-group">
								<p>Retype Password</p>
								<input class="form-control" type="password" name="retype" placeholder="********"
									value="<%= typeof retype != 'undefined' ? retype : ''  %>">
							</div>
							<hr>
							<div class="form-group">
								<button>Sign Up</button>
							</div>
						</form>


					</div>
				</div>
			</div>
		</div>
	</section>

	<%- include("partials/footer") %>
</body>

</html>